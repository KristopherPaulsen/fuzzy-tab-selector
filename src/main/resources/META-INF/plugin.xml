<idea-plugin>
    <id>com.kristopherpaulsen.fuzzy_tab_selector</id>
    <name>Fuzzy Tab Selector</name>
    <vendor email="kristopherpaulsen@gmail.com" url="https://kristopherpaulsen.com">kristopherpaulsen.com</vendor>

    <description><![CDATA[
    Easily and quickly select an open tab through fuzzy searching.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij"/>

    <actions>
        <action id="com.kristopherpaulsen.fuzzytabselector.SelectTab"
                class="com.kristopherpaulsen.fuzzytabselector.SelectTab"
                text="FuzzySelectTab"
                description="It does the thing!"
        >
            <add-to-group group-id="SearchEverywhereActions" anchor="first"/>
        </action>
    </actions>
</idea-plugin>